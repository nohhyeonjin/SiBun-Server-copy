type User {
	id : ID!  @id
	email : String!
	name : String
	score : Int!
	chatList : [ChatRoom] @relation(name : "BossChatRelation")
}

type Category {
	id : ID!  @id
	name : String!
}

type Store {
	id : ID!  @id
	pwd : String!
	category : Category!
	menuList : [Menu]!
	minimumPrice : Int!
	deliveryFee : Int!
	orderList : [Order]
}

type Menu {
	id : ID!  @id
	name : String!
	store : Store!
	price : Int!
}

type ChatRoom {
	id : ID!  @id
	boss : User!  @relation(name : "BossChatRelation")
	memberList : [User] @relation(name : "MemberChatRelation")
	store : Store!
	location : String!
	orderExpectedTime : DateTime!
	orderList : [Order]
	chatContentList : [ChatContent]!
	state : Boolean!
}

type Order {
	id : ID!  @id
	user : User!
	menuList : [Menu]!
	chatRoom : ChatRoom!
	state : Int!
}		

type ChatContent {
	id : ID!  @id
	user : User!
	chatRoom : ChatRoom!
	content : String!
}